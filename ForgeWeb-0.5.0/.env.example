# ForgeWeb Environment Variables
# Copy this file to .env and update with your settings

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8000

# GitHub Integration (optional)
GITHUB_TOKEN=your_github_token_here
GITHUB_USERNAME=your_github_username

# Site Configuration
DEFAULT_SITE_NAME=My ForgeWeb Site
DEFAULT_SITE_AUTHOR=Website Owner
DEFAULT_SITE_DESCRIPTION=A beautiful website built with ForgeWeb

# Branding
BRAND_PRIMARY_COLOR=#1b5fa3
BRAND_SECONDARY_COLOR=#f9943b
BRAND_ACCENT_COLOR=#10b981
LOGO_PATH=assets/logo.png

# TailwindCSS Configuration
TAILWIND_CDN_URL=https://cdn.tailwindcss.com
CUSTOM_CSS_PATH=assets/css/custom.css

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_EXTENSIONS=.png,.jpg,.jpeg,.gif,.svg,.css,.js,.html,.md,.txt

# AI Service Configuration (optional)
OLLAMA_HOST=http://localhost:11434
OPENAI_API_KEY=your_openai_api_key_here