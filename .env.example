#!/usr/bin/env bash
# OGC Environment Configuration Template
# Copy this file to .env and fill in your values
# 
# Built in partnership with Buildly.io for and by Open.Build
# Security: Never commit the actual .env file!

# =============================================================================
# STELLAR NETWORK CONFIGURATION  
# =============================================================================
# Network: 'testnet' for development, 'public' for production
STELLAR_NETWORK=testnet

# Horizon API URLs (automatically selected based on STELLAR_NETWORK)
TESTNET_HORIZON_URL=https://horizon-testnet.stellar.org
MAINNET_HORIZON_URL=https://horizon.stellar.org

# Network passphrases (automatically selected)
TESTNET_PASSPHRASE=Test SDF Network ; September 2015
MAINNET_PASSPHRASE=Public Global Stellar Network ; September 2015

# =============================================================================
# OGC TOKEN CONFIGURATION
# =============================================================================
TOKEN_CODE=OGC
TOTAL_SUPPLY=1000000000

# MAINNET OGC Token (LIVE PRODUCTION)
ISSUER_PUBLIC_KEY=GDSIFZE6L35WW2VMI2GDEA44HO34QNAAXTC473ZQDQZEUM2HGCC6GY57

# Testnet issuer (for development - replace with your testnet issuer)
TESTNET_ISSUER_PUBLIC_KEY=your_testnet_issuer_public_key_here

# =============================================================================
# SECRETS (DO NOT COMMIT - USE SECURE STORAGE)
# =============================================================================

# Distribution account secret key (NEVER COMMIT THIS)
# For mainnet: Use your actual distributor secret key
# For testnet: Use testnet secret keys
DISTRIBUTOR_SECRET_KEY=your_secret_key_here

# Personal account secret (optional, for personal operations)
PERSONAL_SECRET_KEY=your_personal_secret_key_here

# =============================================================================
# GOOGLE INTEGRATION
# =============================================================================

# Google Form for airdrop submissions
GOOGLE_FORM_URL=https://docs.google.com/forms/d/e/1FAIpQLScENyeUS_ZHUmMxnfjr1s8tMg5NqmGfI8dpFFYQc4j68VRpTQ/viewform

# Google Sheets URL for processing submissions (get from Responses tab)
GOOGLE_SHEET_URL=https://docs.google.com/spreadsheets/d/your_sheet_id/edit

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Telegram Bot for notifications (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
NOTIFICATION_EMAIL=notifications@yourdomain.com

# =============================================================================
# WEBSITE CONFIGURATION
# =============================================================================

# Website URLs
WEBSITE_URL=https://open-build.github.io/ogcoin
GITHUB_REPO_URL=https://github.com/open-build/ogcoin

# API endpoints (if applicable)
API_BASE_URL=https://api.open.build/ogc
WEBHOOK_URL=https://your-webhook-url.com/ogc

# =============================================================================
# AIRDROP SYSTEM SETTINGS
# =============================================================================

# Airdrop amounts (in OGC tokens)
AIRDROP_MIN_AMOUNT=1
AIRDROP_MAX_AMOUNT=3
DEFAULT_AIRDROP_AMOUNT=2

# Rate limiting
MAX_TRANSACTIONS_PER_MINUTE=10
BATCH_SIZE=5
PROCESSING_DELAY_SECONDS=1

# Validation settings
ENABLE_TRUSTLINE_CHECK=true
ENABLE_ACCOUNT_VALIDATION=true
ENABLE_DUPLICATE_PREVENTION=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug mode (true for development, false for production)
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Testing settings
ENABLE_TESTING=true
TEST_MODE=false

# Local development
LOCAL_DEV=true
DEV_PORT=3000

# =============================================================================
# BUILDLY.IO INTEGRATION (Optional)
# =============================================================================

# Buildly API settings (if using Buildly services)
BUILDLY_API_URL=https://api.buildly.io
BUILDLY_API_KEY=your_buildly_api_key_here
BUILDLY_PROJECT_ID=your_project_id_here

# =============================================================================
# MONITORING & ANALYTICS  
# =============================================================================

# Application monitoring
ENABLE_MONITORING=true
MONITOR_INTERVAL_MINUTES=15

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token_here

# Health check endpoints
HEALTH_CHECK_URL=https://yourdomain.com/health
STATUS_PAGE_URL=https://status.yourdomain.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API rate limiting
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_BURST=10

# CORS settings (for web API)
ALLOWED_ORIGINS=https://open-build.github.io,https://localhost:3000

# Session security
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup settings
ENABLE_BACKUPS=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Cloud storage (for backups)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=ogc-backups
AWS_REGION=us-east-1

# =============================================================================
# EXAMPLES FOR COMMON SETUPS
# =============================================================================

# Example 1: Development Setup
# STELLAR_NETWORK=testnet
# DEBUG=true
# LOG_LEVEL=DEBUG
# ENABLE_TESTING=true

# Example 2: Production Setup  
# STELLAR_NETWORK=public
# DEBUG=false
# LOG_LEVEL=INFO
# ENABLE_MONITORING=true

# Example 3: Staging Setup
# STELLAR_NETWORK=testnet
# DEBUG=false
# LOG_LEVEL=INFO
# RATE_LIMIT_REQUESTS_PER_HOUR=100