# OGC Token Configuration Template
# Copy this to .env and fill in your actual values
# NEVER commit .env with real keys to version control!

# Stellar Network Configuration
STELLAR_NETWORK=testnet  # or 'public' for mainnet

# Token Configuration
TOKEN_CODE=OGC
TOTAL_SUPPLY=1000000

# Account Keys (FILL THESE IN - NEVER COMMIT REAL KEYS!)
# ISSUER_SECRET_KEY=YOUR_ISSUER_SECRET_KEY_HERE
# ISSUER_PUBLIC_KEY=YOUR_ISSUER_PUBLIC_KEY_HERE
# DISTRIBUTOR_SECRET_KEY=YOUR_DISTRIBUTOR_SECRET_KEY_HERE
# DISTRIBUTOR_PUBLIC_KEY=YOUR_DISTRIBUTOR_PUBLIC_KEY_HERE

# Website Integration
WEBSITE_URL=https://yourusername.github.io/ogcoin
WEBSITE_REPORTS_DIR=../reports
WEBSITE_API_ENDPOINT=https://yourusername.github.io/ogcoin/api

# Tool Settings
GENERATE_REPORTS=true